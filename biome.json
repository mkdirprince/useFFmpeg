{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["docs", "tests/**/*", "**/*.test.js", "package*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": ["build/", "biome.json", "docs"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["build/", "biome.json", "docs"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
